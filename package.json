{
  "name": "fullstack-ts-starter",
  "version": "0.0.0-semantically-released",
  "description": "A full-stack TypeScript web app starter with comprehensive tooling",
  "private": true,
  "type": "module",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "check": "npm run format && npm run lint && npm run typecheck && npm run secretlint && npm run spellcheck && npm run test",
    "format": "prettier . --write",
    "lint": "npm run lint --workspaces",
    "typecheck": "npm run typecheck --workspaces",
    "secretlint": "secretlint ./backend/src ./frontend/src --maskSecrets",
    "spellcheck": "cspell --no-progress \"./**/*.ts\" \"./*.{md,js,cjs,mjs,ts,json,yml}\"",
    "dev": "npm run dev --workspaces",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:coverage": "npm run test:coverage --workspaces",
    "test:unit": "npm run test:unit --workspaces",
    "test:integration": "npm run test:integration --workspaces",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@secretlint/secretlint-rule-pattern": "^8.2.4",
    "@secretlint/secretlint-rule-preset-recommend": "^8.2.4",
    "@stylistic/eslint-plugin": "^2.3.0",
    "@types/node": "^20.14.12",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "@vitest/coverage-v8": "^2.0.4",
    "@webdeveric/eslint-config-ts": "^0.8.0",
    "commitlint-plugin-cspell": "^0.1.1",
    "conventional-changelog-conventionalcommits": "~8.0.0",
    "cspell": "^8.12.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.1.1",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.0.0",
    "rimraf": "^3.0.2",
    "secretlint": "^8.2.4",
    "semantic-release": "~24.0.0",
    "typescript": "~5.5.4",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^2.0.4"
  },
  "lint-staged": {
    "**/*.{js,cjs,mjs,ts,cts,mts}": [
      "npx prettier --write",
      "npx eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "license": "MIT"
}
